<%= form_with(model: ingredient, class: "space-y-6") do |form| %>

  <% if ingredient.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
      <h2 class="font-bold mb-2">
        <%= pluralize(ingredient.errors.count, "error") %> prevented this ingredient from being saved:
      </h2>

      <ul class="list-disc pl-5">
        <% ingredient.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-semibold text-gray-700" %>
    <%= form.text_field :name,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 px-3 py-2" %>
  </div>

  <div>
    <%= form.label :category, class: "block text-sm font-semibold text-gray-700" %>
    <%= form.text_field :category,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 px-3 py-2" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-semibold text-gray-700" %>
    <%= form.text_area :description, rows: 4,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 px-3 py-2" %>
  </div>

  <div>
    <%= form.label :notes, class: "block text-sm font-semibold text-gray-700" %>
    <%= form.text_area :notes, rows: 3,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 px-3 py-2" %>
  </div>

  <div>
    <%= form.submit class: "w-full sm:w-auto rounded-md px-5 py-3 bg-emerald-600 hover:bg-emerald-700 text-white font-semibold shadow-md transition duration-200 cursor-pointer" %>
  </div>

<% end %>

